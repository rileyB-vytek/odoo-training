<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="registry_view_form" model="ir.ui.view">
        <field name="name">motorcycle.registry.view.form</field>
        <field name="model">motorcycle_registry.registry</field>
        <field name="arch" type="xml">
            <form string="Registry View">
                <header></header>
                <sheet>
                    <h1><field name="registry_number"/></h1>
                    <field name="image" widget="image" class="oe_avatar"/>
                    <group>
                        <group>
                            <separator string="Motorcycle Information"/>
                            <field name="register_date"/>
                            <field name="current_mileage"/>
                            <field name="license_plate"/>
                            <field name="vin"/>
                            <field name="make"/>
                            <field name="model"/>
                            <field name="year"/>
                        </group>
                        <group>
                            <separator string="Owner Information"/>
                            <field name="owner_id"/>
                            <field name="email" widget="email"/>
                            <field name="phone" widget="phone"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Related Documents">
                            <group>
                                <field name="certificate_title"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    
    <record id="registry_view_list" model="ir.ui.view">
        <field name="name">motorcycle.registry.view.list</field>
        <field name="model">motorcycle_registry.registry</field>
        <field name="arch" type="xml">
            <tree string="Registry List">
                <field name="registry_number"/>
                <field name="vin"/>
                <field name="license_plate"/>
                <field name="owner_id"/>
            </tree>
        </field>
    </record>
    
    <record id="registry_view_search" model="ir.ui.view">
        <field name="name">motorcycle.registry.view.search</field>
        <field name="model">motorcycle_registry.registry</field>
        <field name="arch" type="xml">
            <search>
                <field name="registry_number"/>
                <field name="vin"/>
                <field name="license_plate"/>
                <field name="owner_id"/>
            </search>
        </field>
    </record>
</odoo>