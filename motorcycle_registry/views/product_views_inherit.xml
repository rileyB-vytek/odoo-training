<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="product_template_product_form_inherit_motorcycle_registry">
            <field name="name">product.template.product.form.inherit.motorcycle_registry</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet//notebook" position="inside">
                    <page string="Motorcycle Data" attrs="{'invisible':[('detailed_type', '!=', 'motorcycle')]}">
                        <group>
                            <group>
                                <separator string="Motorcycle Information"/>
                                <field name="make"/>
                                <field name="model"/>
                                <field name="year"/>
                                <field name="curb_weight"/>
                                <field name="launch_date"/>
                            </group>
                            <group>
                                <separator string="Motor Information"/>
                                <field name="horsepower"/>
                                <field name="top_speed"/>
                                <field name="torque"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <separator string="Power Information"/>
                                <field name="battery_capacity"/>
                                <field name="charge_time"/>
                                <field name="range"/>
                            </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>

        <record id="stock.product_template_action_product" model="ir.actions.act_window">
            <field name="name">Products</field>
            <field name="res_model">product.template</field>
            <field name="domain">[('detailed_type', '=', 'motorcycle')]</field>
        </record>
    </data>
</odoo>